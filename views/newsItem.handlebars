<!doctype html>
<html lang="en">
<head>
	{{> meta-default-partial}}
	<title>{{title}}</title>

	<link rel="stylesheet" href="/css/newsItem.css">
	<!--Slider CSS-->
	<link rel="stylesheet" href="/css/slider.css">
</head>

<body>
	<div class="container">
			<h3 class="newsTitle"><a href="{{link}}">{{title}}</a></h3>
			<div class="border {{type}}"></div>
	
			<div class="info">
				<p class="summary">{{summary}}</p>

				<div class="details">
					<ul class="list-unstyled">
						{{#each details}}
							<li class="detail">{{text}}</li>
						{{/each}}
					</ul>
				</div>
				
				<h5 class="questionTitle">Questions</h5>
				<ul class="questions list-unstyled">
					{{#each questions}}
						<li class="question">{{text}}</li>
						<div class="slider slider-horizontal" id= "GC" style="width: 314px;">
							
						</div>
					{{/each}}
				</ul>
			</div>

	</div>	
	
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
	<script src="/js/modernizr.js"></script>
	<script src="/js/bootstrap-slider.js"></script>
	<script src="/js/newsItem.js"></script>
	
</body>
</html>